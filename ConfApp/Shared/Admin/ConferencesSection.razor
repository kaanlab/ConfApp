
<MudTable Items="@Conferences" Hover="true" Filter="new Func<Conference,bool>(FilterFunc)" @bind-SelectedItem="selectedCoference">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Список конференций</MudText>
        <MudToolBarSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Название</MudTh>
        <MudTh>Тема</MudTh>
        <MudTh>Тема (расширенная)</MudTh>
        <MudTh>Банер</MudTh>
        <MudTh>Логотип</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Название">@context.Name</MudTd>
        <MudTd DataLabel="Тема конференции">@context.MainTopic</MudTd>
        <MudTd DataLabel="Тема конференции (расширенная)">@context.Topic</MudTd>
        <MudTd DataLabel="Банер">@context.Banner</MudTd>
        <MudTd DataLabel="Логотип"><img src=@context.Logo alt="Logo"></MudTd>
        <MudTd><MudButton Variant="Variant.Outlined">Изменить</MudButton></MudTd>
    </RowTemplate>
</MudTable>
<MudButton Variant="Variant.Filled" Color="Color.Primary">Добавить</MudButton>
<MudText Inline="true">Selected: @selectedCoference?.Name</MudText>

