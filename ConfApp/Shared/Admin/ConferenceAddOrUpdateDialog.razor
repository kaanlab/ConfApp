<MudDialog>
    <DialogContent>
        <EditForm EditContext="@editContext">
            <DataAnnotationsValidator />
            <MudTextField Label="Название"
                          @bind-Value="conference.Name" For="@(() => conference.Name)" />
            <MudTextField Label="Тема конференции" Class="mt-3"
                          @bind-Value="conference.MainTopic" For="@(() => conference.MainTopic)" />
            <MudTextField Label="Тема конференции (расширенная)" Class="mt-3"
                          @bind-Value="conference.Topic" For="@(() => conference.Topic)" />
            <MudTextField Label="Время и место проведения" Class="mt-3"
                          @bind-Value="conference.Banner" For="@(() => conference.Banner)" />
            <MudGrid Class="mt-5">
                <MudItem>
                    <img src="/images/@conference.Logo">
                </MudItem>
                <MudItem>
                    <InputFile id="fileInput" OnChange="OnInputFileChange" hidden />
                    <MudFab HtmlTag="label"
                            Color="Color.Secondary"
                            Icon="@Filled.Image"
                            Label="Загрузить лого"
                            for="fileInput" />
                </MudItem>
            </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отменить</MudButton>
        <MudButton Color="Color.Info" OnClick="AddOrUpdate" Disabled="@formInvalid">Сохранить</MudButton>
    </DialogActions>
</MudDialog>