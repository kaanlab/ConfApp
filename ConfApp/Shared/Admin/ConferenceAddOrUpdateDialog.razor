<MudDialog>
    <DialogContent>
        <EditForm EditContext="@editContext">
            <DataAnnotationsValidator />
            <MudTextField Label="Название"
                          @bind-Value="Сonference.Name" For="@(() => Сonference.Name)" />
            <MudTextField Label="Тема конференции" Class="mt-3"
                          @bind-Value="Сonference.MainTopic" For="@(() => Сonference.MainTopic)" />
            <MudTextField Label="Тема конференции (расширенная)" Class="mt-3"
                          @bind-Value="Сonference.Topic" For="@(() => Сonference.Topic)" />
            <MudTextField Label="Время и место проведения" Class="mt-3"
                          @bind-Value="Сonference.Banner" For="@(() => Сonference.Banner)" />
            <MudGrid Class="mt-5">
                <MudItem>
                    <img src="/@imgPath/@Сonference.Logo">
                </MudItem>
                <MudItem>
                    <InputFile id="fileInput" OnChange="OnInputFileChange" hidden />
                    <MudFab HtmlTag="label"
                            Color="Color.Secondary"
                            Icon="@Filled.Image"
                            Label="Загрузить лого"
                            for="fileInput" />
                </MudItem>
            </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отменить</MudButton>
        <MudButton ButtonType="ButtonType.Submit" Color="Color.Info" OnClick="AddOrUpdate" Disabled="@formInvalid">Сохранить</MudButton>
    </DialogActions>
</MudDialog>