<MudDialog>
    <DialogContent>
        <EditForm EditContext="@editContext">
            <DataAnnotationsValidator />
            <MudTextField Label="Название"
                          @bind-Value="Institution.Name" For="@(() => Institution.Name)" />
            <MudGrid Class="mt-5">
                <MudItem>
                    <img src="/@imgPath/@Institution.Logo">
                </MudItem>
                <MudItem>
                    <InputFile id="fileInput" OnChange="OnInputFileChange" hidden />
                    <MudFab HtmlTag="label"
                            Color="Color.Secondary"
                            Icon="@Filled.Image"
                            Label="Загрузить лого"
                            for="fileInput" />
                </MudItem>
            </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отменить</MudButton>
        <MudButton Color="Color.Info" OnClick="AddOrUpdate" Disabled="@formInvalid">Сохранить</MudButton>
    </DialogActions>
</MudDialog>
