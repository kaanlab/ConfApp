<MudDialog>
    <DialogContent>
        <MudTextField Value="@Сonference.Name" Label="Название" ReadOnly="true" />
        <MudTextField Value="@Сonference.MainTopic" Label="Тема конференции" ReadOnly="true" />
        <MudTextField Value="@Сonference.Topic" Label="Тема конференции (расширенная)" ReadOnly="true" />
        <MudTextField Value="@Сonference.Banner" Label="Время и место проведения" ReadOnly="true" />

        <MudGrid Class="mt-5">
            <MudItem>
                <img src="/@imgPath/@Сonference.Logo">
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отменить</MudButton>
        <MudButton Color="Color.Info" OnClick="Delete">Удалить</MudButton>
    </DialogActions>
</MudDialog>

