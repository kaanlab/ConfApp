<MudDialog>
    <DialogContent>
        <MudTextField Value="@Speaker.LastName" Label="Фамилия" ReadOnly="true" />
        <MudTextField Value="@Speaker.FirstName" Label="Имя" ReadOnly="true" />
        <MudTextField Value="@Speaker.Position" Label="Должность" ReadOnly="true" />
        <MudTextField Value="@Speaker.Institution?.Name" Label="Учебное заведение" ReadOnly="true" />

        <MudGrid Class="mt-5">
            <MudItem>
                <img src="/@imgPath/@Speaker.Photo">
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отменить</MudButton>
        <MudButton Color="Color.Info" OnClick="Delete">Удалить</MudButton>
    </DialogActions>
</MudDialog>